<%= form_for @politician do |f| %>
  
  <%# Error Logic: %>
  <% if @politician.errors.any? %>
  <div id="error_explanation">
    <font color=red>
    <h2><%= pluralize(@politician.errors.count, "error") %> prohibited
      this politician from being saved:</h2>
    <ul>
    <% @politician.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
    </font>
  </div>
  <% end %>
  <!--
  <%= @OFFICES = ['N/A', 'President', 'Vice President', 'Supreme Court Justice', 'Governor', 'Senator'] %>
  -->
 
  <p>
    <%= f.label :first_name %> <%= f.text_field :first_name %>
  </p>
 
  <p>
    <%= f.label :last_name %> <%= f.text_field :last_name %>
  </p>
  
  <p>
    <%= f.label :country %><br>
    <%= f.select :country, ['United States of America'] %>
  </p>

  <p>
    <%= f.label :state %><br>
    <%= f.select :state, [['Alabama','AL'], ['Alaska','AK'], ['Arizona','AZ'], ['Arkansas','AR'], ['California','CA'], ['Colorodo','CO'], ['Connecticut','CT'],  ['Delaware','DE'], ['Florida','FL'], ['Georgia','GA'], ['Hawaii','HI'],  ['Idaho','ID'], ['Illinois','IL'], ['Indiana','IN'], ['Iowa','IA'], ['Kansas','KS'], ['Kentucky','KY'], ['Louisiana','LA'], ['Maine','ME'], ['Maryland','MD'], ['Massachusetts','MA'],  ['Michigan','MI'], ['Minnesota','MN'], ['Mississippi','MS'], ['Missouri','MO'], ['Montana','MT'], ['Nebraska','NE'], ['Nevada','NV'], ['New Hampshire','NH'], ['New Jersey','NJ'], ['New Mexico','NM'], ['New York','NY'], ['North Carolina','NC'], ['North Dakota','ND'], ['Ohio','OH'], ['Oklahoma','OK'], ['Oregon','OR'], ['Pennsylvania','PA'], ['Rhode Island','RI'], ['South Carolina','SC'], ['South Dakota','SD'], ['Tennessee','TN'], ['Texas','TX'], ['Utah','UT'], ['Vermont','VT'], ['Virginia','VA'], ['Washingtom','WA'], ['West Virginia','WV'], ['Wisconsin','WI'], ['Wyoming','WY']] %>
  </p>

  <p>
    <%= f.label :candidate_for %><br>
    <%= f.select :candidate_for, @OFFICES %>
  </p>
  
  <p>
    <%= f.label :current_office %><br>
    <%= f.select :current_office, @OFFICES %>
  </p>
  
  <%= puts current_user.name %>
  <%= f.hidden_field :last_edit_by, :value => current_user.name %>
  
  <% if user_signed_in? %>    
    <p>
      <%= f.submit %>
    </p>
  <% end %>
  
<% end %>
