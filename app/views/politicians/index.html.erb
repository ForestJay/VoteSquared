<%= render "shared/top" %>
<title>Politician Listing</title>
<h1>Listing politicians</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Country</th>
    <th>State</th>
    <th>Current Office</th>
    <th>Candidate For</th>
  </tr>
 
  <% row = 0 %>
  <% @politicians.each do |politician| %>
      <% if (row += 1) % 2 == 0 %>
        <tr bgcolor=aquamarine>
      <% else %>
        <tr>
      <% end %>
      <td><%= politician.first_name %> <%= politician.last_name %></td>
      <td><%= politician.country %></td>
      <td><%= politician.state %></td>
      <td><%= politician.current_office %></td>
      <td><%= politician.candidate_for %></td>
      <td><%= link_to 'View', politician_path(politician) %></td>
      <% if user_signed_in? %>
        <% if current_user.points > 2 %>
          <td><%= link_to 'Edit', edit_politician_path(politician) %></td>
        <% end %>
      <% end %>
    </tr>
  <% end %>
</table>

<p><center>
<% if user_signed_in? %>
  <%= link_to 'New politician', new_politician_path %>
<% else %>
  <%= link_to('Login to Add a Politician', user_omniauth_authorize_path(:facebook))  %>
<% end %>
</center>

<%= render "shared/bottom" %>